<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MainUser.Views.Reminder.ReminderEdit">
    <ContentPage.Content>
        <StackLayout Padding="15"
                     VerticalOptions="CenterAndExpand">
            <Label Text="Reminder Update"
                   VerticalOptions="Center"
                   HorizontalOptions="Center" 
                   FontSize="Large"/>

            <Entry x:Name="TxtID"
                   IsVisible="false" />
            <Entry x:Name="TxtTitle"
                   Placeholder="Title" />
            <Entry x:Name="TxtNotes"
                   Placeholder="Notes" />
            <Entry x:Name="TxtPriority"
                   Placeholder="Priority" />
            <Entry x:Name="TxtRepeat"
                   Placeholder="Repeat" />
            <Entry x:Name="TxtSetdate"
                   Placeholder="SetDate" />
            <Entry x:Name="TxtSetTime"
                   Placeholder="Set Time" />

            <Button Text="Update"
                    x:Name="ButtonUpdate"
                    CornerRadius="15"
                    Clicked="ButtonUpdate_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>